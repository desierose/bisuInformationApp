<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="413dp"
        android:layout_height="653dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dashbackground" />

    <androidx.cardview.widget.CardView
        android:id="@+id/viewEvent"
        android:layout_width="154dp"
        android:layout_height="170dp"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="#D85C61"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="105dp"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:scrollbarSize="4dp"
            app:srcCompat="@drawable/news" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="130dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Announcement Section"
            android:textSize="15dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/calendarIn"
        android:layout_width="154dp"
        android:layout_height="170dp"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="#D0E6EF"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createEvent">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="73dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:scrollbarSize="4dp"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="124dp"
            android:layout_height="57dp"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Calendar integration"
            android:textSize="15dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="154dp"
        android:layout_height="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="#F6AAC4"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.002">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="96dp"
            android:layout_height="118dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:scrollbarSize="4dp"
            app:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="Home"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/createEvent"
        android:layout_width="154dp"
        android:layout_height="170dp"
        android:layout_marginTop="28dp"
        android:onClick="gotoCreate"
        app:cardBackgroundColor="#AB98FA"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toEndOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:scrollbarSize="4dp"
            app:srcCompat="@drawable/eventcreation" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="Create Event"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="sans-serif-medium"
        android:text="Admin's Dashboard"
        android:textColor="#5C4C4C"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="183dp"
        android:layout_height="49dp"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.877" />

</androidx.constraintlayout.widget.ConstraintLayout>